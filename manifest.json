{
  "manifest_version": 3,
  "name": "Undetectable Ad Blocker",
  "version": "1.0",
  "description": "Lightweight, privacy-focused ad blocking",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
